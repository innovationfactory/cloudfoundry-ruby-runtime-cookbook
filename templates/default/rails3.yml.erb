---
name: "rails3"
runtimes:
<%- if node.recipes.include? @ruby_1_8_7_runtime[:cookbook] %>
  - "<%= @ruby_1_8_7_runtime[:name] %>":
      version: "<%= @ruby_1_8_7_runtime[:version] %>"
      description: "Ruby 1.8.7"
      executable: "<%= @ruby_1_8_7_runtime[:executable] %>"
      default: <%= @ruby_1_8_7_runtime[:default] %>
      environment:
        rails_env: "production"
        bundle_gemfile:
        rack_env: "production"
<%- end %>
<%- if node.recipes.include? @ruby_1_9_2_runtime[:cookbook] %>
  - "<%= @ruby_1_9_2_runtime[:name] %>":
      version: "<%= @ruby_1_9_2_runtime[:version] %>"
      description: "Ruby 1.9.2"
      executable: "<%= @ruby_1_9_2_runtime[:executable] %>"
      default: <%= @ruby_1_9_2_runtime[:default] %>
      environment:
        rails_env: "production"
        bundle_gemfile:
        rack_env: "production"
<%- end %>
app_servers:
  - "thin":
      description: "Thin"
      executable: false
      default: true
detection:
  - "config/application.rb": true
  - "config/environment.rb": true
staged_services:
  - "name": "mysql"
    "version": "*"
  - "name": "postgresql"
    "version": "*"
